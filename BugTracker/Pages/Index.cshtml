@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

}

<div class="login-form">
    <form method="post">
        <h2 class="text-center">Prijavi se</h2>
        <div class="form-group">
            <label class="text-danger">@Model.ErrorZaUsername</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input asp-for="@Model.Username" type="text" class="form-control" placeholder="Korisnicko ime">
            </div>
        </div>
        <div class="form-group">
            <label class="text-danger">@Model.ErrorZaPassword</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Sifra">
            </div>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary btn-block">Uloguj se</button>
        </div>
    </form>
    <p class="text-center">Nemate nalog! <a href="/Register">Registrujte se ovde</a>.</p>
</div>

<style>
    .login-form {
        width: 385px;
        margin: 70px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .input-group-addon .fa {
        font-size: 18px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>